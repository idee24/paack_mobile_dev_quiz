<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DeliveryDetailsFragment">

    <fragment
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/eighty_dp"
        android:layout_height="@dimen/two_hundred_and_thirty_dp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/headerLayout"
            android:background="@color/purple_500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_marginTop="@dimen/thirty_two_dp"
                android:layout_marginStart="@dimen/sixteen_dp"
                android:layout_marginBottom="@dimen/sixteen_dp"
                android:contentDescription="@string/img_dsc"
                android:src="@drawable/chevron_left_white"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/thirty_two_dp"
                android:layout_height="@dimen/thirty_two_dp"/>

            <TextView
                app:layout_constraintStart_toEndOf="@id/backIcon"
                android:layout_marginTop="@dimen/thirty_two_dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/sfpro_medium"
                android:text="@string/delivery_details"
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:textSize="@dimen/font_size_twenty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ScrollView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            android:paddingBottom="@dimen/hundred_and_fifty_dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/hundred_and_fifty_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/two_dp"
                    android:layout_margin="@dimen/twenty_four_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="@dimen/sixteen_dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/dateTextView"
                            android:textColor="@color/text_color_dark"
                            android:fontFamily="@font/inter_bold"
                            android:textSize="@dimen/font_size_fourteen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="match_parent"
                            android:background="@color/light_less_ash"
                            android:layout_marginTop="@dimen/eight_dp"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:layout_height="@dimen/one_dp"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_marginTop="@dimen/eight_dp"
                            android:layout_marginBottom="@dimen/sixteen_dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/startTimeTextView"
                                android:textColor="@color/blue_grey"
                                android:fontFamily="@font/inter_regular"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:id="@+id/blue_dot"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="@dimen/two_dp"
                                app:layout_constraintStart_toEndOf="@id/startTimeTextView"
                                android:layout_marginStart="@dimen/twenty_four_dp"
                                android:background="@drawable/blue_oval_electric"
                                android:padding="@dimen/sixteen_dp"
                                android:layout_width="@dimen/sixteen_dp"
                                android:layout_height="@dimen/sixteen_dp"/>

                            <TextView
                                android:id="@+id/originTextView"
                                app:layout_constraintStart_toEndOf="@id/blue_dot"
                                android:layout_marginStart="@dimen/twenty_four_dp"
                                android:layout_marginEnd="@dimen/sixteen_dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/gun_metal"
                                android:fontFamily="@font/inter_regular"
                                android:layout_width="@dimen/zero_dp"
                                android:layout_height="wrap_content"/>

                            <View
                                app:layout_constraintEnd_toEndOf="@id/blue_dot"
                                app:layout_constraintStart_toStartOf="@id/blue_dot"
                                app:layout_constraintTop_toBottomOf="@id/blue_dot"
                                app:layout_constraintBottom_toTopOf="@id/blackTriangle"
                                android:layout_marginTop="@dimen/four_dp"
                                android:layout_marginBottom="@dimen/four_dp"
                                android:background="@color/gun_metal"
                                android:layout_width="@dimen/one_dp"
                                android:layout_height="@dimen/zero_dp"/>


                            <TextView
                                android:id="@+id/endTimeTextView"
                                android:textColor="@color/blue_grey"
                                android:fontFamily="@font/inter_regular"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/destinationTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:id="@+id/blackTriangle"
                                app:layout_constraintTop_toTopOf="@id/destinationTextView"
                                app:layout_constraintStart_toEndOf="@id/startTimeTextView"
                                android:layout_marginStart="@dimen/twenty_four_dp"
                                android:background="@drawable/red_place_marker"
                                android:layout_marginTop="@dimen/two_dp"
                                android:layout_width="@dimen/sixteen_dp"
                                android:layout_height="@dimen/twelve_dp"/>

                            <TextView
                                android:id="@+id/destinationTextView"
                                app:layout_constraintStart_toEndOf="@id/blackTriangle"
                                android:layout_marginStart="@dimen/twenty_four_dp"
                                android:layout_marginEnd="@dimen/sixteen_dp"
                                android:layout_marginTop="@dimen/forty_dp"
                                app:layout_constraintTop_toBottomOf="@id/originTextView"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/gun_metal"
                                android:fontFamily="@font/inter_regular"
                                android:layout_width="@dimen/zero_dp"
                                android:layout_height="wrap_content"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:textColor="@color/gun_metal"
                    android:text="@string/customer"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="@dimen/font_size_sixteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/two_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginBottom="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/detailsLayout"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/sixteen_dp"
                            android:orientation="vertical"
                            android:layout_width="@dimen/zero_dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginTop="@dimen/sixteen_dp"
                                android:id="@+id/customerNameTextView"
                                android:textColor="@color/gun_metal"
                                android:fontFamily="@font/inter_bold"
                                android:text="Gen Sani Abacha"
                                android:textSize="@dimen/font_size_fourteen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Customer Instruction:"
                                android:layout_marginTop="@dimen/eight_dp"
                                android:textColor="@color/gun_metal"
                                android:fontFamily="@font/sfpro_regular"
                                android:textSize="@dimen/font_size_twelve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/instructionTextView"
                                android:layout_marginBottom="@dimen/sixteen_dp"
                                android:textColor="@color/gun_metal"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="@dimen/font_size_twelve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/raiseButton"
                    android:text="@string/raise_issue"
                    android:fontFamily="@font/sfpro_bold"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/thirty_two_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginBottom="@dimen/three_hundred_and_fifty_dp"
                    style="@style/button_blue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sixty_dp"/>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>